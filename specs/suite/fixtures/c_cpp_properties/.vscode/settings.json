// Place your settings in this file to overwrite default and user settings.
{
    "cSpell.enabled": false,
    "editor.formatOnSave": true,
    "lint-for-cpp.clang.enable": true,
    "lint-for-cpp.clang.executable": "clang",
    "lint-for-cpp.cppcheck.enable": false,
    "lint-for-cpp.cppcheck.force": true,
    // "lint-for-cpp.cppcheck.extraArgs": ["-j", "6"],
    "lint-for-cpp.debug": true,
    "lint-for-cpp.flexelint.executable": "/home/jbenden/Source/FlexeLint_Workstation/flexelint8/src/flexelint",
    "lint-for-cpp.flexelint.enable": false,
    "lint-for-cpp.pclintplus.enable": true,
    "files.associations": {
        "*.rst": "restructuredtext",
        "rsync.h": "c",
        "deflate.h": "c",
        "fileapi.h": "c",
        "errhandlingapi.h": "c",
        "winbase.h": "c",
        "stat.h": "c",
        "winnt.h": "c"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.o": true,
        "**/*.exe": true,
        "**/{configure,Makefile}": true,
        "**/config.{guess,h,log,status,sub}": true,
        "**/*-tstamp": true,
        "**/{GPATH,GRTAGS,GTAGS}": true
    },
    "lint-for-cpp.run": "onSave",
    "lint-for-cpp.pclintplus.enable": false,
    "lint-for-cpp.pclintplus.executable": "/bin/echo1",
    "lint-for-cpp.pclintplus.configFile": ".flexelint.lnt",
    "lint-for-cpp.excludeFromWorkspacePaths": [
        ".git",
        "${workspaceRoot}/include/hal"
    ]
}